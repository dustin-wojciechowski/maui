<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Maui.Controls.Sample.DemoTabbedPage"
            Title="Tabbed Page">

    <ContentPage>
        <StackLayout Margin="20,35,20,20">
            <Label Text="Tab 1" FontSize="25" />
            <Label Text="Tap the button below to toggle the home indicator on iPhone X, XR, and XS models." />
            <Button Text="Toggle Home Indicator"
                    Clicked="Button_Clicked" />

            <Button VerticalOptions="End" Text="Back"
                    Clicked="Back_Clicked" />
        </StackLayout>
    </ContentPage>

    <ContentPage>
        <StackLayout Margin="20,35,20,20">
            <Label Text="Tab 2" FontSize="25" />
            <Label Text="Tap the button below to toggle the home indicator on iPhone X, XR, and XS models." />
            <Button Text="Toggle Home Indicator"
                    Clicked="Button_Clicked" />

            <Button VerticalOptions="End" Text="Back"
                    Clicked="Back_Clicked" />
        </StackLayout>
    </ContentPage>

</TabbedPage>